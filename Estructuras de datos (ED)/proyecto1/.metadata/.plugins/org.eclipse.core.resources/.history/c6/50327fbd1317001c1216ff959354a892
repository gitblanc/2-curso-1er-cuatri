package proyecto1;

/**
 * @author blanc
 *
 */
public class Algoritmos {

	public static float fact(int n) {
		if (n == 0)
			return 1;
		return fact(n - 1) * n;

	}

	public static float pot2(int n) {
		if (n == 0)
			return 1;
		return 2 * pot2(n - 1);
	}

	public static float fibo(int n) {
		if (n == 1)
			return 0;
		else if (n == 2)
			return 1;
		return fibo(n - 1) + fibo(n - 2);
	}
}
