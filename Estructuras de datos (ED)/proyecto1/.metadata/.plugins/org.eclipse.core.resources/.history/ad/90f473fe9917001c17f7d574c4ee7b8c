package proyecto1;

/**
 * @author blanc
 *
 */
public class Algoritmos {

	// RECURSIVOS

	public static double fact(double n) {
		if (n == 0)
			return 1;
		return fact(n - 1) * n;

	}

	public static double pot2(double n) {
		if (n == 0)
			return 1;
		return 2 * pot2(n - 1);
	}

	public static double fibo(double n) {
		if (n == 1)
			return 0;
		else if (n == 2)
			return 1;
		return fibo(n - 1) + fibo(n - 2);
	}

	// ITERATIVOS

	public static double factI(double n) {
		double num = 1;
		for (int i = 1; i <= n; i++) {
			num = num * i;
		}
		return num;

	}

	public static double pot2I(double n) {
		if (n == 0)
			return 1;
		double num = 2;
		while (n > 0) {
			num = num * n;
			n--;
		}
		return num;

	}

	public static double fiboI(double n) {
		double num = 1;
		for (int i = 3; i <= n; i++) {
			num = num + i - 1 + i - 2;
		}
		return num;
	}

}
